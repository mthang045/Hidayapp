<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background"
    tools:ignore="ExtraText">  <!-- Nền gradient xám -->

    <!-- Logo ứng dụng với bóng đổ nhẹ -->

    <!-- Form đăng nhập -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-86dp"
        android:background="#80B0B0B0"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:radius="60dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:text="HIDAYMOVIE"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!-- Username input field -->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/user_name"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:textSize="16sp" /> <!-- Thêm inputType cho Username -->

        <!-- Password input field -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:textSize="16sp" />

        <!-- Sign In Button -->

        <!-- Text for 'Don't have an account?' -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_login_bg"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:padding="14dp"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:text="Bạn chưa có tài khoản ? Đăng ký ngay "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>
